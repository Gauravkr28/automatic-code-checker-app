{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-var": "error",
    "no-console": "warn",
    "eqeqeq": "error",
    "no-unused-vars": ["warn", { "args": "none" }],
    "prefer-const": "warn",
    "no-trailing-spaces": "warn",
    "indent": ["error", 4, { "SwitchCase": 1 }],  // Explicitly 4 spaces
    "quotes": ["error", "double"],       // Explicitly double quotes
    "semi": ["error", "always"],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
